@model CURO.Models.Student
@{

}
<h2 class="text-center">JOIN FORM</h2>
<div class="container">

    <form class="bg-dark shadow p-3 mb-5 bg-white rounded" asp-action="CeratForm" asp-controller="Student" method="post">
        <div class="form-group row mt-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Enter Your Name..">
            </div>
            </div>
        <div class="form-group row mt-3">
            <label asp-for="Roll" class="col-sm-2 col-form-label">Roll</label>
            <div class="col-sm-10">
                <input asp-for="Roll" class="form-control" placeholder="Enter Your Roll No..">
            </div>
        </div>
        
        
        <div class="form-group row mt-3">
            <label asp-for="Subject" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input asp-for="Subject" class="form-control" placeholder="Enter Your Subject..">
            </div>

        </div>
        <div class="form-group row mt-3">
            <label asp-for="City" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="Enter Your City..">
            </div>
        </div>
        <div class=" justify-content-end">
        <button type="submit" class="btn btn-outline-success">Submit</button>
           |
            <a asp-action="Index" asp-controller="Student" asp-route-id="@Model.Id" class="btn btn-outline-success">Back to List</a>
        </div>
    </form>
</div>


